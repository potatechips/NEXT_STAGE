<div class="text-center" style="margin-top:30px">
	<%= form_with url: search_path, method: :get, local: true do %>
		<!-- あとで行き先変えないと -->
		<%= text_field_tag :word %>
		<!-- こんな検索ワードをまたはなんかできるの？ →できなかった -->
		<%= select_tag "model", options_for_select([["ユーザー名", "User"],["目標名","Goal"]]) %>
		<%= select_tag "search", options_for_select([["部分一致","part"],["完全一致", "perfect"],["前方一致","front"],["後方一致","back"]]) %>
		<%= submit_tag :検索する %>
	<% end %>
</div>