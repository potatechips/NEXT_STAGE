<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'layouts/sidebar', goal: @goal_new, user: current_user %>
		</div>
		<div class="col-xs-9">
			<div class="edit_box">
				<h2>目標編集ページ</h2><br>
				<%= form_for (@goal) do |f| %>
					<div class="field">
					    <%= f.label :目標 %>　　
					    <%= f.text_field :content,placeholder: "達成、挑戦したいこと" %>
					</div>
					<div class="field">
						<%= f.label :期限 %>
						<%= f.date_select :term_at,use_month_numbers: true,start_year: 2020,end_year: 2021,include_blank: true %>
					</div>
				<%= f.submit "修正した目標を投稿する",class: "btn btn-primary" %>
				<% end %>
		    </div>
		    <br>
		    <% @user.goals.each do |goal| %>
		        <h3><%= goal.content %></h3>
		    <% end %>
		</div>
	</div>
</div>