<div class="container">
  <div class="row">
    <div class="col-xs-12">
          <h2>ログイン画面</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                  <%= f.label :メールアドレス %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                  <%= f.label :パスワード %><br />
                  <%= f.password_field :password, autocomplete: "current-password" %>
              </div>

              <% if devise_mapping.rememberable? %>
              <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              </div>
              <% end %>

              <div class="actions">
                  <%= f.submit "ログイン",class: "btn btn-primary" %>
              </div>
          <% end %>

              <%= form_for(User.new, url:user_session_path) do |f| %>
                  <%= f.hidden_field :email, value: "aaa@gmail.com" %>
                  <%= f.hidden_field :password, value: "000000" %>
                  <%= f.submit "かんたんログイン", class:"btn btn-lg center-block btn-success" %>
              <% end %>

          <%= link_to "新規登録画面へ", new_registration_path(resource_name) %><br />

          <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name) %><br />
    </div>
  </div>
</div>