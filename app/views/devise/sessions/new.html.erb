<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <div class="col-xs-offset-3">
            <h2>ログイン画面</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                    <%= f.label :メールアドレス %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                    <%= f.label :パスワード %><br />
                    <%= f.password_field :password, autocomplete: "current-password" %>
                </div>

               <!--  # <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
                <% end %> -->

                <div class="actions">
                    <%= f.submit "ログイン",class: "btn btn-lg btn-primary" %>
                </div>
            <% end %>

            <%= link_to 'ゲストユーザーでログイン(閲覧用)', users_guest_sign_in_path, method: :post,class: "btn btn-success" %>
            <br>
            <div class="command">
                <%= link_to "<<新規登録画面へ", new_registration_path(resource_name) %>　　　
                <%= link_to ">>パスワードをお忘れですか?", new_password_path(resource_name) %>
            </div>
        </div>
    </div>
  </div>
</div>