<div class="container">
	<div class="row">
	    <div class="col-xs-offset-4">
	    	<h2>会員情報編集</h2>
	    	<%= form_for(@user) do |f| %>
	    	    <div class="field">
	    	    	<%= f.label :プロフィール画像 %>
	    	    	<%= attachment_image_tag @user, :profile_image, size: '60x60',fallback: "no-image.jpg",class: "user-icon" %><br>
	    	    	<%= f.attachment_field :profile_image %>
	    	    </div>
	    	    <div class="field">
	    	    	<%= f.label :名前 %><br>
	    	    	<%= f.text_field :name %>
	    	    </div>
	    	    <div class="field">
	    	     	<%= f.label :メールアドレス %><br>
	    	     	<%= f.email_field :email %>
	    	    </div>
	    	    <div class="field">
	    	        <%= f.label :自己紹介（50文字まで）%><br>
	    	        <%= f.text_area :introduction, size: "25x6" %>
	    	    </div>

	    	    <div class="actions">
		            <%= f.submit "変更する",class: "btn btn-primary" %>
		        </div>
	    	<% end %>
	    </div>
	</div>
</div>
